{
  "compilerOptions": {
    "types": [
      "node",
      "jest"
    ],
    "target": "es2018",
    "lib": [
      "es2018"
    ],
    "outDir": "build",
    "sourceMap": false,
    "module": "esnext",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "importHelpers": true,
    "declaration": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react"
  },
  "include": [
    "src/**/*"
  ]
}
